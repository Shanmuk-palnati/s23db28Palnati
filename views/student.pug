extends layout

block content
  h1= title
  -let results = students
  - let create = `dispatch(\"/student/create\")`
  button.btn( class="btn-success ml-1", onclick= create) Create
  div.container-fluid 
        div.row
            each item, index in results
                - let destination = `dispatch(\"/student/update?id=${item._id}\")`
                - let destination1 = `dispatch(\"/student/detail?id=${item._id}\")`
                - let destination2 = `dispatch(\"/student/delete?id=${item._id}\")`
                div(class="col-sm-2")
                    p Name is #{item.Name}
                    p SId is #{item.SId} 
                    p Email is #{item.Email} 
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
                    button.btn( class="btn ml-1", onclick= destination1) Details
                    button.btn( class="btn-danger ml-1", onclick= destination2) Delete                    
  script. 
        function buy(index){
        alert("You purchased item "+(index+1))
        }
  script.
        function dispatch(path){
        window.location.href=path
        }

